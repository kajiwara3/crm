メールマガジン名：<%= link_to @magazine.subject, @magazine %><br />
<%= link_to "宛先追加", [:new, @magazine, :magazine_target] %>
<p>宛先一覧</p>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= MagazineTarget.human_attribute_name "name" %></th>
      <th><%= MagazineTarget.human_attribute_name "email" %></th>
      <th><%= MagazineTarget.human_attribute_name "enabled_target" %></th>
    </tr>
  </thead>
  <tbody>
    <% @target_list.each do |target| %>
      <tr>
        <td><%= target.name %></td>
        <td><%= target.email %></td>
        <td><%= target.enabled_target %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @target_list %>
